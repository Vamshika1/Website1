 <script> 
 
 function countdownclock()
 {
 
 var Countdate = new Date("Dec 25,2021").getTime();
var today = new Date().getTime();console.log(Countdate);
console.log(today);var gap=Countdate-today;console.log(gap);
var second=1000;var min=60*second;var hour=60*min; var day=hour*24;
var textday=Math.floor(gap/day);console.log(textday);
var texthour=Math.floor((gap%day)/hour);
console.log(textday);textmin=Math.floor((gap%hour)/min);
console.log(textmin);textsec=Math.floor((gap%min)/second);
console.log(textsec);
 

document.getElementById("mallclock").currentdate.value=new Date().getDate();

document.getElementById("mallclock").currentmonth.value=new Date().getMonth();

document.getElementById("mallclock").currenthours.value=new Date().getHours();

document.getElementById("mallclock").daysnow.value=textday;


document.getElementById("mallclock").hoursnow.value=texthour;

document.getElementById("mallclock").minsnow.value=textmin;
 }
  
  
  
  

  </script>

